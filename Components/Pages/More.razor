    padding: 3px 8px;
    border-radius: 4px;
    font-size: 0.9rem;
    font-weight: 600;
}

.currency-symbol {
    font-size: 1.4rem;
    color: #2c3e50;
}

.currency-name {
    margin: 0;
    color: #7f8c8d;
    font-size: 0.95rem;
}

.exchange-rate {
    margin-top: auto;
    padding-top: 15px;
    border-top: 1px dashed #e0e0e0;
}

.rate-value {
    display: block;
    font-size: 0.9rem;
    color: #7f8c8d;
    margin-bottom: 5px;
}

.conversion-example {
    font-size: 1.1rem;
    font-weight: 600;
    color: #27ae60;
}

@@media (max-width: 768px) {
    .currency-grid {
        grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    }
    
    .section-title {
        font-size: 2rem;
    }
}

@@media (max-width: 480px) {
    .currency-grid {
        grid-template-columns: 1fr;
    }
    
    .currency-card {
        padding: 15px;
    }
}

.center{
    display: flex;
    justify-content: center;
}
.button-link {
    font-size: 1.2rem;
    padding: 12px 25px;
    background-color: #14732a;
    color: white;
    border: none;
    border-radius: 5px;
    text-decoration: none;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.button-link:hover {
    background-color: #0f571f;
    transform: scale(1.05);
}
